---
// Importación de global.css
import "../styles/global.css";

// Importa los componentes de la web
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

// Título cambia dependiendo de la página
const { title } = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="icon" href="/favicon.ico" />
		<title>{ title }</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
	</body>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(to bottom right, #0A0C10, #101F3F);
		font-family: 'Orbitron', sans-serif;
	}
</style>
