---
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<section class="max-w-[80%] p-2 text-white mx-auto flex justify-center items-center">
  <div class="w-full max-w-2xl mx-auto">
    <h2
      class="font-extrabold sm:text-lg md:text-xl lg:text-2xl text-center mb-4"
    >
      Aqu√≠ puedes ver algunos ejemplos
    </h2>

    <div class="flex flex-col md:flex-row gap-8 px-4 justify-center mx-auto items-center">
      {
        posts.map((post) => (
          <a href={`/posts/${post.slug}`}>
            <article class="bg-gray-800 bg-opacity-50 p-6 rounded-lg shadow-lg max-h-62 min-w-90">
              <h3 class="text-xl font-bold mb-2">{post.data.title}</h3>
              <p class="text-sm text-gray-400 mb-1">
                Por: {post.data.author} | Publicado: {post.data.date}
              </p>
              <div
                class="prose prose-invert max-w-none text-justify"
                set:html={post.data.description}
              />
            </article>
          </a>
        ))
      }
    </div>
  </div>
</section>
